<!DOCTYPE html>
<html>
  <head>
    <title>NeighborhoodToolTime</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.0.8/css/all.css">
  </head>

  <body class="background-light-primary">
    <nav class="navbar navbar-expand-lg background-dark-primary">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse text-icons" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item active">
          <a class="nav-link text-icons" href="/">Home <span class="sr-only">(current)</span></a>
        </li>
        <% if current_user %>
        <li class="nav-item">
          <%= link_to('Log Out', destroy_user_session_path, method: :delete, class: "nav-link text-icons") %>
        </li>
        <% else %>
        <li class="nav-item">
          <a class="nav-link text-icons" href="/users/sign_up">Sign Up</a>
        </li>
        <li class="nav-item">
          <a class="nav-link text-icons" href="/users/sign_in">Log In</a>
        </li>
        <% end %>
       </ul>
    </div>
    </nav>

    <%= yield %>
  </body>
</html>
