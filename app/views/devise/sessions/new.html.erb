<div class="container-fluid">
  <div class="container">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="row justify-content-center align-items-center bg-light mt-5 col col-lg-8 mx-auto rounded-container">
      <div class="col col-10">
        <div class="row justify-content-center align-items-center m-3">
          <div class="form-group">
            <h4 class="">Log In</h4>
          </div>

          <!-- form-group// -->
          <div class="form-group input-group">
            <div class="input-group-prepend">
              <span class="input-group-text"> <i class="fa fa-envelope"></i> </span>
            </div>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "E-mail", class: "form-control" %>
          </div> <!-- form-group// -->

          <!-- form-group// -->
          <div class="form-group input-group">
            <div class="input-group-prepend">
              <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
            </div>
            <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "form-control" %>
          </div><!-- form-group// -->

          <!-- form-group// -->
          <% if devise_mapping.rememberable? %>
          <div class="field">
            <%= f.check_box :remember_me %>
            <%= f.label :remember_me %>
          </div><!-- form-group// -->
          <% end %>

          <div class="container">
            <div class="actions">
              <%= f.submit "Log in", class: "btn btn-primary btn-block" %>
            </div>
     
            <div class="text-center"><%= render "devise/shared/links" %> </div>

          </div>
          <% end %>

        </div>
      </div>