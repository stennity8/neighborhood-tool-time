<div class="container">
    <div class="text-center">
      <% if @user.nil? %>
        <h3>Tool List</h3>
        
        <%= form_tag("/equipment", method: 'get') do %>
        <%= label_tag(:q, "Search All Tools for:") %>
        <%= text_field_tag(:q) %>
        <%= submit_tag("Search", class: "btn background-accent") %>
        <% end %>
        <br>
        <%= form_tag("/equipment", method: 'get') do %>
        <%= label_tag(:category_id, "Filter by Category:") %>
        <%= collection_select(:equipments, :categories, Category.all, :title, :title, {:include_blank => '' }) %>
        <%= submit_tag("Filter", class: "btn background-accent") %>
        <% end %>
        <br>
      <% else %>
        <h3><%= @user.name %>'s Tool List</h3>
        <%= button_to 'Create New Tool', new_user_equipment_path(@user.id), class: "btn background-accent mb-2" %>
      <% end %>
    </div>
   
    <%= render "equipment" %>
</div>